{
    "name": "Sefaria Flashcards",
    "description": "Automatically build a flashcard deck while learning",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "lookup.js",
            "addFlashcard.js",
            "background.js"
        ]
    },
    "browser_action": {
        "default_title": "open notecards manager"
    },
    "icons": {
		"16": "sefaria-flashcard.png"
	},
    "permissions": ["storage", "unlimitedStorage", "activeTab", "contextMenus", "https://sefaria.org/", "tabs"]
    
  }